awk '/`[0-9]+`/ {
	match($0, /`[0-9]+`/)
	n = substr($0, RSTART+1, RLENGTH-2)
	cmd = "./ranbits --quick " n
	cmd | getline key
	cmd | getline eof
	close(cmd)
	sub(/`[0-9]+`/, key, $0)
	print
	next
}
{ print }' $*
